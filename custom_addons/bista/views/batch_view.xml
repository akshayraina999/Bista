<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record model="ir.ui.view" id="batch_view_list">
            <field name="name">Batch View</field>
            <field name="model">bista_batch</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="location"/>
                    <field name="stages"/>
                    <field name="state"/>
<!--                    <field name="trainee"/>-->
<!--                    <field name="trainer"/>-->
                    <field name="training_topic"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="batch_view_form">
            <field name="name">Batch View Form</field>
            <field name="model">bista_batch</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <group>
                                <field name="location"/>
                                <field name="stages"/>
                                <field name="state"/>
                            </group>
                            <group>
<!--                                <field name="trainee"/>-->
<!--                                <field name="trainer"/>-->
                                <field name="training_topic"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="batch_action_window">
          <field name="name">Bista Batch</field>
          <field name="res_model">bista_batch</field>
          <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Batch View" id="bista_batch_view" parent="bista.menu_5_batch" action="batch_action_window"/>
    </data>
</odoo>